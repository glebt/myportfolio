<div id="left_col">
	<% title "Browse Links for: " + current_project.name %>
	<%= link_to image_tag("/images/new_link_btn.png", :alt=>"New Link"), new_project_link_path(current_project) %>
	<ul>
	  	<%
	  	if current_project.links.count > 0
	  	  for link in current_project.links %>
  		    <li><%= link_to link.name, project_links_path(current_project, link) %> <span class="date">(<%= link.created_at..strftime("%b, %d %Y at %I:%M %p") %>)</span></li>
  		  <% end %>
  		<% else %>
  			<li><em>This project has no links.</em></li>
  	  	<% end %>
  	  	</ul>
</div>
<div id="sidebar">
  <h3><%= link_to "&#187; Back to Project Home", project_path(current_project) %></h3>
  <%= render :partial => "projects/project_sidebar"  %>
</div>

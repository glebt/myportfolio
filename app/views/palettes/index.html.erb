<div id="left_col">
	<% title "Browse Palettes for: " + current_project.name %>
    <h1><%= yield(:title) %></h1>
	<%= link_to image_tag("/images/new_palette_btn.png", :alt=>"New Palette"), new_project_palette_path(current_project) %>
		<ul class="linklist">
	  	<%
	  	if current_project.palettes.count > 0
	  	  for palette in current_project.palettes %>
  		    <li class="<%= cycle('normal', 'alt') %>">
  		    	<%= link_to palette.name, edit_project_palette_path(current_project, palette) %> <span class="date">(<%= palette.created_at.strftime("%b, %d %Y at %I:%M %p") %>)</span>
  		    	<div id="palette_small">
  		    		<% for swatch in palette.color_swatches %>
	  		    		<div class="small_swatch" style="background:<%= swatch.hex %>"></div>
	  		    	<% end %>
  		    	</div>
  		    </li>
  		  <% end %>
  		<% else %>
  			<li><em>This project has no palettes.</em></li>
  	  	<% end %>
  	  	</ul>
  	  	<%= will_paginate @palettes %>
</div>
<div id="sidebar">
  <h3><%= link_to "&#187; Back to Project Home", project_path(current_project) %></h3>
  <%= render :partial => "projects/project_sidebar"  %>
</div>


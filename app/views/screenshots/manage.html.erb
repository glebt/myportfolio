<div id="left_col">
	<% title "Manage Screenshots for: " + current_project.name %>
    <h1><%= yield(:title) %></h1>
	<%= link_to image_tag("/images/new_screenshot_btn.png", :alt=>"New Screenshot"), new_project_screenshot_path(current_project) %>
	<ul class="linklist managelist">
	  	<%
	  	if current_project.screenshots.count > 0
	  	  for screenshot in current_project.screenshots.recent(3) %>
	    	<li class="<%= cycle('normal', 'alt') %>">
	    		<%= image_tag screenshot.image.url(:tiny), :class => "tinythumb" %>
	    		<span class="info"><%= link_to screenshot.name, screenshot.image.url %> <span class="date"><%= screenshot.created_at.strftime("%b, %d %Y at %I:%M %p") %></span></span>
	  			<%= link_to image_tag("/images/delete_screenshot_btn.png", :alt => "Delete Note"), [current_project, screenshot], :confirm => 'Are you sure?', :method => :delete, :class => "del_btn" %>
	  	    	</li>
  		  <% end %>
		  <div class="clear"><br /></div>
  		<% else %>
  			<li><em>This project has no screenshots.</em></li>
  	  	<% end %>
  	</ul>
</div>

<div id="sidebar">
  <h3><%= link_to "&#187; Back to Project Home", project_path(current_project) %></h3>
  <%= render :partial => "projects/project_sidebar"  %>
</div>